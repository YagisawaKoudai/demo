<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>There are the current books in our system.</p>

<ul id="books">
  <% @books.each do |c| %>
  <li>
    <%= link_to c.title, book_path(c) -%>
    <button> <%= link_to 'Edit', edit_book_path(c) %></button>
    <button> <%= link_to 'Delete', book_path(c), method: :delete, :confirm => "Are you sure you want delete this item?" %> </button>
  </li>
  <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Book", {:action => 'new'} %></p>
